{% extends 'admin/base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}

    <div class="col-lg-12">
        <div class="clearfix">
            <h1 class="float-left">Contacts</h1>
            <a href="{{ path('contact_new') }}" class="btn btn-success float-right"><i class="fa fa-plus"></i> Create new</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.subject }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
