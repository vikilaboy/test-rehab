{% extends 'admin/base.html.twig' %}

{% block title %}Hospitals{% endblock %}

{% block body %}
    <div class="col-lg-12">
        <div class="clearfix">
            <h1 class="float-left">Hospitals</h1>
            <a href="{{ path('hospital_new') }}" class="btn btn-success float-right"><i class="fa fa-plus"></i> Create new</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Messages</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for row in rows.results %}
            <tr>
                <td>{{ row[0].id }}</td>
                <td>
                    <a href="{{ path('hospital_edit', {'id': row[0].id}) }}">{{ row[0].name }}</a>
                </td>
                <td>{{ row[0].phone }}</td>
                <td>{{ row[0].address }}</td>
                <td>{{ row['messages'] }}</td>
                <td>
                    <a href="{{ path('hospital_edit', {'id': row[0].id}) }}"><i class="fa fa-edit"></i></a>
                    <a href="{{ path('hospital_show', {'id': row[0].id}) }}"><i class="fa fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
